{
  "name": "streamgo-frontend",
  "productName": "StreamGo",
  "version": "0.1.0",
  "type": "module",
  "description": "StreamGo Media Center Frontend",
  "scripts": {
    "dev": "vite --port 1420",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts,.svelte --ignore-pattern 'src/**/*.test.*' --ignore-pattern 'src/**/*.spec.*' src",
    "lint:fix": "eslint --ext .ts,.svelte src --fix",
    "type-check": "tsc --noEmit",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test:unit": "vitest run --reporter=default",
    "test:unit:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "ci": "npm run type-check && npm run lint && npm run build && npm run check",
    "tauri:dev": "./scripts/dev.sh",
    "tauri:build": "cd src-tauri && cargo tauri build",
    "tauri:build:debug": "cd src-tauri && cargo build"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/svelte": "^5.2.0",
    "@types/node": "^20.11.0",
    "@types/webtorrent": "^0.110.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.46.0",
    "jsdom": "^24.1.0",
    "rimraf": "^6.0.1",
    "svelte": "^5.41.0",
    "svelte-check": "^4.3.3",
    "svelte-eslint-parser": "^0.41.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.10",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-notification": "^2.3.1",
    "@tauri-apps/plugin-process": "^2.3.0",
    "@tauri-apps/plugin-updater": "^2.4.0",
    "dashjs": "^4.5.0",
    "hls.js": "^1.6.13",
    "webtorrent": "^2.8.4"
  },
  "overrides": {
    "ip": "^2.0.1"
  }
}
