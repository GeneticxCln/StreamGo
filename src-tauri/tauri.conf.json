{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StreamGo",
  "version": "0.1.0",
  "identifier": "com.streamgo.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "StreamGo - Media Center",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Entertainment",
    "shortDescription": "StreamGo - Modern Media Center",
    "longDescription": "StreamGo is a modern, cross-platform media center application that allows you to discover, watch, and organize movies, TV shows, and other content from various sources."
  }
}
